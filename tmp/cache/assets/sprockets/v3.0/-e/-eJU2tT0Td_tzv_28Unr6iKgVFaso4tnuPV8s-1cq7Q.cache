  var changeFormTarget;

  changeFormTarget = function(trigger) {
    var closeReply, container, form, formTargetId, user;
    closeReply = function(trigger) {
      var form;
      form = trigger.closest('form');
      console.log(form);
      return trigger.closest('.comment-reply').remove();
