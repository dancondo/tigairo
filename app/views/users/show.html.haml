.profile-container
  -if policy(@user).edit?
    %p.text-right.profile-edit
      %a.edit-button#open-modal{"data-target" => "#form-modal", "data-toggle" => "modal"}
        %i.fas.fa-edit
        Edit
  .user-profile.content-box
    .profile-header
      .profile-picture-box
        %a#open-modal{"data-target" => "#edit-picture-modal", "data-toggle" => "modal"}
          - if @user.photo.present?
            = image_tag @user.photo.url, class: 'avatar profile-picture'
          - else
            = image_tag 'default.png', class: 'avatar profile-picture'
      %h4= @user.nickname
    .profile-body
      .profile-block
        %p 留学先の国：
        .profile-country-box
          %p
            -@user.countries.each do |country|
              = country.name
              -unless country == @user.countries.last
                ,
      .profile-block
        %p 留学期間　：
        %p 201８年４月～１０月
      .profile-block
        %p 留学の目的：
        %p.field-text ボランティアなど自分のやりたいことを色々やってみるため
      .profile-block
        %p 留学期間　：
        %p 201８年４月～１０月
      .profile-block
        %p ひとこと　：
        %p.field-text ブラジルで貧困層の人々に対するボランティアをしたくて来ました…が今はとりあえずお休みして、ウェブデザインの勉強をやってます！ 時々考えすぎてパ二くります。でも、ここに来られて幸せだなあと思ってます。
    .profile-posts-block
      %span 過去の投稿
      .profile-posts
        = link_to user_posts_url(@user) do
          %h6
            = image_tag 'globeicon.png', class: 'icon'
            ここでの「ふつう」
            = "(#{@user.posts.count})"
            %i.fas.fa-angle-right

// Modals

// Edit

-if policy(@user).edit?
  #form-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalCenterTitle", :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} ×
        .modal-body
          =render 'users/edit'

// Photo Viewer

#edit-picture-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalCenterTitle", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-photo{:role => "document"}
    .modal-content
      .modal-header
        %h4= @user.nickname
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
      .modal-body
        =render partial: 'shared/avatar_viewer', locals: { user: @user }
