- if user.photo.present?
  = image_tag user.photo.url, class: 'avatar avatar-small profile-avatar'
- else
  = image_tag 'default.png', class: 'avatar avatar-small profile-avatar'
%p
  = user.nickname
- if user.country
  = image_tag user.country.photo_path, class: 'avatar avatar-small'
  %p
    = user.country.name
