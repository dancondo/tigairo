-if post.photo.url
  .modal-content.post
    .modal-body
      %p.post-date
        = l(post.created_at.to_date)
      %h4.post-title
        = post.title
      .post-block.post-block-show
        .post-image-box
          = image_tag post.photo.url, class: 'post-img'
        .post-block-inputs
          = render partial: 'users/user_info', locals: { user: post.user }
      %p.post-content
        = post.content
-else
  .modal-content.post
    .modal-body
      %p.post-date
        = l(post.created_at.to_date)
      %h4.post-title
        = post.title
      .post-block-show.post-block-simple
        .post-floats
          = render partial: 'users/user_info', locals: { user: post.user }
        %p.post-content
          = post.content
