.photo-viewer-container
  -if user.photo.present?
    =image_tag user.photo.url, class: 'avatar profile-photo-solo'
  -else
    =image_tag 'default.png', class: 'avatar profile-photo-solo'
  -if current_user == user
    .photo-changes-links
      =link_to "#" do
        Edit
      .profile-photo-edit
        =simple_form_for user do |f|
          = f.input :photo, label: false, class: 'input-photo'
          Change
      =link_to "#" do
        Delete


